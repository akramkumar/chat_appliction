<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">

      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://unblast.com/wp-content/uploads/2020/05/Group-Chat-Illustration.jpg"
             class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <p class="lead fw-normal mb-0 me-3">Sign up</p></br>
        <!-- Email input -->
        <div class="form-outline mb-4">

          <%= f.email_field :email, autofocus: true, autocomplete: "email",id: "form1Example13", class:"form-control form-control-lg" %>
          <%= f.label :email ,class: "form-label",for: "form1Example13"%>
        </div>
        <div class="form-outline mb-4">

          <%= f.text_field :name, autofocus: true, autocomplete: "name",id: "form1Example13", class:"form-control form-control-lg" %>
          <%= f.label :name ,class: "form-label",for: "form1Example13"%>
        </div>
        <div class="form-outline mb-4">

          <%= f.file_field :profile_image, autofocus: true, autocomplete: "email",id: "form1Example13", class:"form-control form-control-lg" ,accept: "image/*"%>

        </div>
        <!-- Password input -->
        <div class="form-outline mb-4">
          <%= f.password_field :password, autocomplete: "new-password",id: "form1Example23", class: "form-control form-control-lg" %>

          <%= f.label :password,class: "form-label", for: "form1Example23"  %>
        </div>
        <div class="form-outline mb-4">

          <%= f.password_field :password_confirmation, autocomplete: "new-password",id: "form1Example23", class: "form-control form-control-lg" %>
          <%= f.label :password_confirmation,class: "form-label", for: "form1Example23" %>
        </div>
        <!-- Submit button -->

        <%= f.submit "sign up", class: "btn btn-primary btn-lg btn-block" %>
        <br>
        <%- if controller_name != 'sessions' %>

          <div class="text-center">
            <p>already loged in?<%= link_to "Log in", new_session_path(resource_name) %><br /></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
