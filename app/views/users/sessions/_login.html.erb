<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">

      <div class="col-md-8 col-lg-7 col-xl-6">
        <img src="https://img.freepik.com/free-vector/happy-man-online-dating-via-laptop_74855-7495.jpg"
             class="img-fluid" alt="Phone image">
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <p class="lead fw-normal mb-0 me-3">Sign in</p></br>
          <!-- Email input -->
          <div class="form-outline mb-4">

            <%= f.email_field :email, autofocus: true, autocomplete: "email",id: "form1Example13", class:"form-control form-control-lg" %>
            <%= f.label :email ,class: "form-label",for: "form1Example13"%>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">

            <%= f.password_field :password, autocomplete: "current-password",id: "form1Example23", class: "form-control form-control-lg" %>
            <%= f.label :password,class: "form-label", for: "form1Example23" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="d-flex justify-content-around align-items-center mb-4">
              <!-- Checkbox -->
              <div class="form-check">

                <%= f.check_box :remember_me,class: "form-check-input", id: "form1Example3", checked: true%>
                <%= f.label :remember_me,class: "form-check-label", for: "form1Example3" %>
              </div>
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
              <% end %>

            </div>
          <% end %>
          <!-- Submit button -->

          <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
        <br>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <div class="text-center">
            <p>Not a member?<%= link_to "Sign up", new_registration_path(resource_name) %><br /></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

















