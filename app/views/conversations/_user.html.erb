<%if @conversation.present? %>
  <%if @message.present? %>
<li class="p-2 border-bottom">

  <a href="/conversations/<%="#{user.id}" %>" class="d-flex justify-content-between">
    <div class="d-flex flex-row">
      <div>
        <% if user.profile_image.attached? %>
          <%= image_tag user.profile_image ,class: "d-flex align-self-center me-3 rounded-circle",height: "45px" , width: "50px"%>
        <%else %>
          <img
            src="https://i0.wp.com/www.gosfordpark-coventry.org.uk/wp-content/uploads/blank-avatar.png?ssl=1"
            alt="avatar" class="d-flex align-self-center me-3" width="60">
        <%end %>
        <span class="badge bg-success badge-dot"></span>

      </div>
      <div class="pt-1">
        <p class="fw-bold mb-0"><%=user.name %></p>
        <p class="small text-muted"><%=user.email %></p>
      </div>
    </div>

    <div>
      <p class="fw-bold mb-0"><i class="fas fa-share"></i><%=" #{@message.where("user_id = ?",@user.id).count }"%></p>
      <p class="fw-bold mb-0"><i class="fas fa-reply"></i><%=" #{@message.where("user_id = ?",@users.id).count}"%></p>
    </div>
  </a>
</li>
    <%else %>
    No conversation can be found!
    <%end %>
  <%else %>
