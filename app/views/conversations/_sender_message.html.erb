
<div class="d-flex flex-row justify-content-end">
  <div>
    <p class="small p-2 me-3 mb-1 text-white rounded-3 bg-primary">

      <%=message.body %>


    </p>
    <p class="small me-3 mb-3 rounded-3 text-muted">
      <script type="text/javascript">
          // Get the created_at time from the ActiveRecord object
          var createdAt = '<%= message.created_at.to_i * 1000 %>';

          // Convert the created_at time to the browser's timezone
          var browserTime = moment(parseInt(createdAt)).local().format("hh:mm A | MMM DD");

          // Output the browser's timezone adjusted time
          document.write(browserTime);
      </script>
    </p>
  </div>
  <%= button_to  "/conversations/#{message.conversation_id}/messages/#{message.id}", class: 'btn btn-outline-primary btn-rounded btn-sm px-2 float-top', method: :delete, data: { confirm: 'Are you sure?',remote: true } do %>
    <i class="far fa-trash-alt mt-0"></i>
  <% end %>
  <%if message.user.profile_image.attached? %>

    <%=image_tag message.user.profile_image,
                 alt: "avatar 3", style: "width: 60px; height: 50px;", class: "d-flex align-self-center me-3 rounded-circle" %>

  <%else %>
    <img src="https://i0.wp.com/www.gosfordpark-coventry.org.uk/wp-content/uploads/blank-avatar.png?ssl=1"
         alt="avatar 3" style="width: 40px; height: 100%;">

  <%end %>
</div>